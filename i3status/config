general {
    colors = false
    interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip "
    format_down = "W: down "
}

ethernet _first_ {
    format_up = " E: %ip (%speed) "
    format_down = " E: down "
}
cpu_temperature 0 {
    format = " T: %degrees Â°C "
}

cpu_usage {
    format = " C: %usage "
}

memory {
    format = " M: %percentage_used "
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

battery all {
    format = " B: %percentage "
    status_chr = "CHR"
}

volume master {
    format = " V: %volume (%devicename) "
    format_muted = " V: muted (%volume) "
    device = "pulse"
}

tztime local {
    format = " %d-%m-%Y %H:%M:%S"
}
